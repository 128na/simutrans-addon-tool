{
  "name": "simutrans-addon-tool",
  "version": "0.0.1",
  "description": "Simutrans Addon Tool.",
  "productName": "Simutrans Addon Tool",
  "author": "128na <simutrans.128na@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/128na/simutrans-addon-tool"
  },
  "scripts": {
    "lint:check": "eslint --ext .js,.ts,.vue ./",
    "lint": "eslint --fix --ext .js,.ts,.vue ./",
    "format": "prettier --write \"**/*.{scss,html,md}\"",
    "test": "echo \"No test specified\" && exit 0",
    "dev": "quasar dev -m electron",
    "build": "quasar build -m electron",
    "build:debug": "quasar build -m electron -d",
    "lang:check": "ts-node ./tools/validate-translate.ts",
    "typecheck": "tsc --noEmit",
    "check:all": "npm run lint &&npm run typecheck &&npm run format && npm run lang:check"
  },
  "dependencies": {
    "@intlify/vue-i18n-loader": "^4.2.0",
    "@octokit/rest": "^19.0.11",
    "@quasar/extras": "^1.16.4",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.3",
    "electron-store": "^8.1.0",
    "luxon": "^3.3.0",
    "pinia": "^2.1.3",
    "quasar": "^2.12.0",
    "simutrans-dat-parser": "^1.1.1",
    "simutrans-makeobj-wrapper": "^1.2.1",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.1"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^0.10.0",
    "@quasar/app-vite": "^1.4.3",
    "@types/luxon": "^3.3.0",
    "@types/node": "18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "autoprefixer": "^10.4.14",
    "electron": "^24.3.1",
    "electron-packager": "^17.1.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-vue": "^9.14.1",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": "^18 || ^16 || ^14.19",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
